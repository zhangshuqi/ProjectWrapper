<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--  <item name="colorPrimary">@color/colorPrimary</item>
          <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
          <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="BaseDialogBottomFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">
            @style/BaseDialogBottomFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogLeftFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">
            @style/BaseDialogLeftFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogRightFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">
            @style/BaseDialogRightFragmentStyle.AnimationStyle
        </item>
    </style>

    <style name="BaseDialogUpFragmentStyle" parent="BaseDialogFragmentStyle">
        <item name="android:windowAnimationStyle">@style/BaseDialogUpFragmentStyle.AnimationStyle
        </item>
    </style>


    <style name="BaseDialogFragmentStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>


    <style name="BaseDialogBottomFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_bottom_out</item>
    </style>

    <style name="BaseDialogUpFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_up_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_up_out</item>
    </style>

    <style name="BaseDialogLeftFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_left_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_left_out</item>
    </style>

    <style name="BaseDialogRightFragmentStyle.AnimationStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_base_dialog_right_in</item>
        <item name="android:windowExitAnimation">@anim/anim_base_dialog_right_out</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="MultiFunctionButtonView">
        <attr name="buttonText" format="string" />
        <attr name="buttonBackgroundResource" format="reference|integer" />
        <attr name="buttonBackgroundColor" format="color" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonTextSize" format="integer" />
    </declare-styleable>

    <style name="photopickerCustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--不要修改titleTextColor属性名字->-->
        <item name="titleTextColor">#ffffff</item>
        <item name="actionBarTheme">@style/actionBarTheme</item>
        <!--设置图片选择界面标题栏以及底栏颜色-->
        <item name="colorPrimary">#38393E</item>
        <!--设置图片选择界面状态栏颜色-->
        <item name="colorPrimaryDark">#2F3034</item>
        <item name="actionBarSize">56dip</item>
    </style>

    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#fff</item>
        <item name="actionBarSize">56dip</item>
    </style>
    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>
    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>
